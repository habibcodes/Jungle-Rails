<%# Create new user form %>

<section class="admin-categories-new">

  <header class="page-header">
    <h1>Signup for an Account</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

      <%= form_for :user, url: '/users' do |form| %>
        
        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: 'form-control', type: 'text', placeholder: 'Enter your name here' %>          
        </div>

        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: 'form-control', type: 'text', placeholder: 'Enter your lastname here' %>      
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: 'form-control', type: 'email', placeholder: 'Enter your email here' %>   
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, class: 'form-control', type: 'password', placeholder: 'Enter your password' %>
        </div>

        <div class="form-group">
          <%= form.label :confirm_password %>
          <%= form.password_field :password_confirmation, class: 'form-control', type: 'password', placeholder: 'Confirm your password' %>
        </div>

        <div class="text-center"><%= form.submit 'Submit ', class: 'btn btn-md btn-success' %></div>
      <% end %>

   
    </div>
  </div>

</section>