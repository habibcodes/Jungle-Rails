<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin: Show All Categories</h1>
  </header>


  <div class="panel panel-default categories">
    <table class="table table-bordered table-hover">
      <thead>
        <tr class="active">
          <th>Category Names</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
  </div>

  <%# New category form link %>
  <div>
    <%= link_to 'Add New Category', [:new, :admin, :category], class: 'btn btn-sm btn-info' %>
  </div>

</section>