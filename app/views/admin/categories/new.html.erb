<section class="admin-categories-new">

  <header class="page-header">
    <h1>Admin: Add New Category</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for [:admin, @category] do |form| %>
        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control', placeholder: 'Enter a new category here' %>
        </div>

        <%= form.submit 'Submit ', class: 'btn btn-sm btn-success' %>
      <% end %>

    <div style="margin-top: 1em;">
      <%= link_to 'Back to Categories', [:admin, :categories], class: 'btn btn-sm btn-info' %>
    </div>
    </div>


  
  </div>

</section>